<div class="pro-forms">
  <div class="column">
    <div class="general-form">
      <h5>Infos générales</h5>
      <%= simple_form_for @pro do |f| %>
        <div class="form-inputs">
          <div class="input-and-icon">
            <%= f.input :brand, label: false, placeholder:'Marque ou raison sociale' %>
            <span class="icon fas fa-store"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :contact_person, placeholder:'Personne à contacter', label: false %>
            <span class="icon fas fa-user"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :email, label: false, placeholder:'Email' %>
            <span class="icon fas fa-envelope"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :phone, label: false, placeholder: 'Téléphone du contact' %>
            <span class="icon fas fa-phone"></span>
          </div>
        </div>
        <%= f.button :submit, "Enregistrer", class: "btn-blue", id:"save-cta" %>
      <% end %>
    </div>
    <div class="general-form">
      <h5>Réseaux sociaux</h5>
      <%= simple_form_for @pro do |f| %>
        <div class="form-inputs">
          <div class="input-and-icon">
            <%= f.input :facebook, label: false, placeholder:'Votre page facebook' %>
            <span class="icon fab fa-facebook"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :insta, placeholder:'Votre page instagram', label: false %>
            <span class="icon fab fa-instagram"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :youtube, label: false, placeholder:'Votre page youtube' %>
            <span class="icon fab fa-youtube"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :twitter, label: false, placeholder: 'Votre page twitter' %>
            <span class="icon fab fa-twitter"></span>
          </div>
        </div>
        <%= f.button :submit, "Enregistrer", class: "btn-blue", id:"save-cta" %>
      <% end %>
    </div>
  </div>
  <div class="column">
    <div class="general-form">
      <%= simple_form_for(@pro, :url => { :action => "update_password" } ) do |f| %>
        <h5>Modifier le mot de passe</h5>
        <div class="form-inputs">
          <div class="input-and-icon">
            <%= f.input :current_password, required: true, label: false, placeholder: 'Mot de passe actuel'%>
            <span class="icon fas fa-lock"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :password, required: true, label: false, placeholder: 'Nouveau mot de passe', hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
            <span class="icon fas fa-lock"></span>
          </div>
          <div class="input-and-icon">
            <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirmer le nouveau mot de passe' %>
            <span class="icon fas fa-lock"></span>
          </div>
        </div>
        <%= f.button :submit, "Changer mot de passe", class: "btn-blue", id:"password-cta" %>
      <% end %>
    </div>
  </div>
</div>



