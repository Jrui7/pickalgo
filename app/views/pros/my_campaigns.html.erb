

<%= render 'pros/navbar' %>
<%= render 'pros/right-links-dashboard' %>
<div class="dashboard-container">
  <%= render 'pros/dashboard-navigation' %>
  <div class="general-infos">
    <div class="campaigns-container">
      <h5>Vos campagnes</h5>
        <% if @campaigns.present? %>
          <table>
            <tr>
              <th>Nom de la campagne</th>
              <th>Type de campagne</th>
              <th>Statut</th>
              <th>Voir</th>
            </tr>
            <% @campaigns.each do |campaign| %>
              <tr>
                <td><%= campaign.product.title %></td>
                <td><%= campaign.test_type %></td>
                <% if campaign.state == "ongoing" %>
                  <td class="ongoing">En cours</td>
                  <% else %>
                  <td class="closed">Clôturée</td>
                <% end %>
                <td><%= link_to 'Détails', promo_path(campaign) %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p>Vous n'avez pas encore créé de campagne</p>
        <% end %>

    </div>
  </div>
</div>
