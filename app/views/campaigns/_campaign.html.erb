
<%= link_to campaign_path(campaign) do %>
  <div class="product-card">
    <%= cl_image_tag("#{campaign.product.photos.first.path}", :width=>110, :height=>110, :crop=>"fill", class: "recap-image")%>
    <div class="recap-body">
      <div class="title-and-price">
        <h3><%= campaign.product.title.capitalize %></h3>
        <p class="product-description"><%= campaign.product.description.capitalize.first(40) %></p>
      </div>
      <div class="bottom-sexion">
        <div class="product-category">
          <p class="<%= campaign.category.name.downcase.gsub('Ã©', 'e')%>"> <%= campaign.category.name %></p>
        </div>
        <div class="social-overview">
          <% if Pick.campaign_viewed_by_user?(@user.id, campaign.id) %>
            <div class="icon-and-number done-by-user">
              <div class="glyphicon glyphicon-eye-open"></div>
              <p><%= campaign.views%></p>
            </div>
          <% else %>
            <div class="icon-and-number">
              <div class="glyphicon glyphicon-eye-open"></div>
              <p><%= campaign.views%></p>
            </div>
          <% end %>
          <% if Pick.campaign_picked_by_user?(@user.id, campaign.id) %>
            <div class="icon-and-number done-by-user">
              <%= image_tag "blue-icon.png", class: "pick-icon" %>
              <p class="picks-counter"><%= campaign.added_to_cart.count%></p>
            </div>
          <% else %>
            <div class="icon-and-number">
              <%= image_tag "gray-icon.png", class: "pick-icon" %>
              <p class="picks-counter"><%= campaign.added_to_cart.count%></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
