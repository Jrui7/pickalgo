<div class="page-container">
  <div class="form-and-image">
    <div class="registration-form">
      <div class="logo-beta logo-form"><%= image_tag "logo.png", id: "logo", alt: "logo pickalgo color" %><br>©Beta 2019
      </div>
      <div class="form-elements">
        <h1>S'inscrire</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <p id="beta-limit">Pickalgo c'est seulement sur invitation. Renseignez votre code d'invitation ainsi que les informations nécessaires à l'inscription.</p>
          <div class="form-inputs">
            <div class="first-name-and-code">
              <div class="input-and-icon">
                <%= f.input :invite, placeholder: "Votre code d'invitation", autofocus: true, label: false %>
                <span class="icon fas fa-user-plus"></span>
              </div>
              <div class="input-and-icon">
                <%= f.input :first_name, label: false, placeholder:'Prénom' %>
                <span class="icon fas fa-user"></span>
              </div>
            </div>
            <div class="input-and-icon">
              <%= f.input :last_name, placeholder:'Nom', label: false %>
              <span class="icon fas fa-user"></span>
            </div>
            <div class="input-and-icon">
              <%= f.input :email, label: false, placeholder:'Email' %>
              <span class="icon fas fa-envelope"></span>
            </div>
            <div class="input-and-icon">
              <%= f.input :password, label: false, placeholder:'Mot de passe', hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
              <span class="icon fas fa-lock"></span>
            </div>
             <div class="checkbox-and-text"><%= f.check_box :terms_of_service %>J'accepte les <%= link_to "conditions d'utilisation", cgu_path %>
             </div>
             <div class="sign-link">
               Déjà un compte sur Pickalgo ? <%= link_to "Se connecter", new_user_session_path %>
             </div>
          </div>
          <%= f.button :submit, "Je m'inscris", class: "btn-orange", id:"registration-cta" %>
        <% end %>
      </div>
    </div>
    <div class="image-background" style="background-image: linear-gradient(rgba(241, 243, 247, 0.6) 50%, transparent 100%), url('https://res.cloudinary.com/djmp0ivep/image/upload/v1538480440/tags.jpg');">
    </div>
  </div>
</div>
