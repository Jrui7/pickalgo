<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name, label: false, placeholder:'Prénom', autofocus: true %>
    <%= f.input :last_name, placeholder:'Nom', label: false %>
    <%= f.input :email, required: true %>
    <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
     <div class="checkbox-and-text"><%= f.check_box :terms_of_service %>J'accepte les <%= link_to "conditions d'utilisation", cgu_path %></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "C'est parti !", class: "btn-orange" %>
  </div>
<% end %>
