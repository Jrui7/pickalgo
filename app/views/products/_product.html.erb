<div class="product-card">
  <%= cl_image_tag("#{product.photos.first.path}", :width=>110, :height=>110, :crop=>"fill", class: "recap-image")%>
  <div class="recap-body">
    <div class="title-and-price">
      <h3><%= product.title.capitalize %></h3>
      <p><%= product.price %> €</p>
    </div>
    <div class="product-category">
      <p class="<%= product.category.name.downcase.gsub('é', 'e') %>"><%= product.category.name %></p>
    </div>
  </div>
  <div class="edit-links">
    <%= link_to  edit_product_path(product) do%>
      <i class="fas fa-edit"></i>
    <% end %>
  </div>
</div>
<div class="campaign-link">
  <% campaign = product.campaigns.last %>
  <% if campaign.present? && campaign.ongoing? %>
    <div class="status-overview">
      <i class="fas fa-circle red-icon"></i>
      <span>Campagne active</span>
    </div>
    <%= link_to promo_path(campaign) do %>
      <div class="new_campaign_buttom btn-white">Voir</div>
    <% end %>
  <% else %>
    <div class="status-overview">
      <i class="fas fa-circle gray-icon"></i>
      <span>Pas de campagne active</span>
    </div>
    <%= link_to new_product_campaign_path(product) do %>
      <div class="new_campaign_buttom btn-white">Lancer une campagne</div>
    <% end %>
  <% end %>
</div>
